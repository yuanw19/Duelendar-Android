<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:contentDescription="@string/TCreateEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#090E35"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/TBCreateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

            <ImageButton
                android:id="@+id/IBCreateEventReturnMain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:background="#001C1C1C"
                android:contentDescription="@string/IBCreateEventReturnMain"
                app:srcCompat="@drawable/abc_vector_test" />

            <TextView
                android:id="@+id/TCreateEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/TCreateEvent"
                android:text="@string/TCreateEvent"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/THomeworkName"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/leftrounded"
                android:gravity="center"
                android:text="@string/THomeworkName"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/PTHomeworkName"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@id/THomeworkName"
                android:layout_toRightOf="@id/THomeworkName"
                android:background="@drawable/rightrounded"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="@string/PTHomeworkName"
                android:textColor="#787878"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/TDuedate"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/leftrounded"
                android:gravity="center"
                android:text="@string/TDuedate"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/PTDuedate"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@id/TDuedate"
                android:layout_toRightOf="@id/TDuedate"
                android:background="@drawable/rightrounded"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="@string/PTDuedate"
                android:textColor="#787878"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/IBDuedate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="355dp"
                android:layout_marginLeft="355dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/IBDuedate"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/arrowblack" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/THomeworkNotificationSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/THomeworkNotificationSetting"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/IHomeworkNotificationSetting"
                android:layout_width="362dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:contentDescription="@string/IHomeworkNotificationSetting"
                app:srcCompat="@drawable/roundedbutton" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/TNotificationTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:contentDescription="@string/TNotificationTime"
                        android:text="@string/TNotificationTime"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/TToDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@id/TNotificationTime"
                        android:layout_toRightOf="@id/TNotificationTime"
                        android:text="@string/TToDeadline"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/TDayNumBG"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/TToDeadline"
                        android:layout_toRightOf="@id/TToDeadline"
                        android:contentDescription="@string/TDayNumBG"
                        app:srcCompat="@drawable/pinkb" />

                    <TextView
                        android:id="@+id/TDayNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="315dp"
                        android:layout_marginLeft="315dp"
                        android:text="@string/TDayNum"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/TDeadlineDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/TDayNumBG"
                        android:layout_toRightOf="@id/TDayNumBG"
                        android:text="@string/TDeadlineDay"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/THomeworkMemo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:text="@string/THomeworkMemo"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/PTHomeworkMemo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_toRightOf="@id/THomeworkMemo"
                        android:layout_toEndOf="@id/THomeworkMemo"
                        android:contentDescription="@string/PTHomeworkMemo"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="@string/PTHomeworkMemo"
                        android:textColor="#A3A3A3" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ICreateEvent"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/ICreateEvent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/confirm" />

            <Button
                android:id="@+id/BCreateEvent"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="#00FFFFFF"
                android:text="@string/BCreateEvent"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>